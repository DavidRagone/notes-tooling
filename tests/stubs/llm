#!/usr/bin/env bash
set -e
if [[ "$1" == "embed-multi" ]]; then
  # emulate --store -d <db>; just touch the DB file
  shift
  DB=""
  while [[ $# -gt 0 ]]; do
    case "$1" in
      -d|--database) DB="$2"; shift 2 ;;
      --store) shift ;;
      --files) shift 2 ;;
      -m) shift 2 ;;
      *) shift ;;
    esac
  done
  [[ -n "$DB" ]] && { mkdir -p "$(dirname "$DB")"; : > "$DB"; }
  exit 0
fi

# Generic llm call (used by weekly-review when not --no-llm): emit deterministic summary
cat >/dev/null  # read stdin
echo "• Themes: stubbed summary
• Decisions: stubbed
• Risks: stubbed
• Next week: stubbed"

